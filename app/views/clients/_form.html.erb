<%= form_with model: client, html: { class: "client-form" } do |f| %>
    <% if client.errors.any? %>
        <div class="alert">
            <%= client.errors.full_messages.to_sentence.capitalize %>
        </div>
    <% end %>

    <div class="form-field">
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true, class: "input-text" %>
    </div>

    <div class="form-actions">
        <%= f.submit "Save", class: "btn btn-primary" %>
    </div>
<% end %>