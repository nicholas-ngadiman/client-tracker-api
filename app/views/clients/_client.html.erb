<div class="client-card">
    <h2><%= link_to client.name, client_path(client) %></h2>
    <div class="actions">
        <%= button_to "Edit", edit_client_path(client) %>
        <%= button_to "Delete", client_path(client), method: :delete,
            data: { turbo_confirm: "Are you sure?" } %>
    </div>
</div>